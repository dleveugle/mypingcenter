//- Javascripts Mixin
mixin JQuery 
    script(type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")

mixin JS_Bootstrap 
     script(src='/bootstrap/js/bootstrap.bundle.min.js') 

mixin Datatables-JQuery 
     script(src='/datatables/js/jquery.dataTables.min.js') 

mixin JS_Datatables-dt 
     script(src='/datatables-dt/js/dataTables.dataTables.min.js') 

mixin Datatables-bs5 
     script(src='/datatables-bs5/js/dataTables.bootstrap5.min.js') 

mixin JS_Datatables-buttons
     script(src='/datatables-buttons/js/dataTables.buttons.min.js') 
     script(src='/datatables-buttons/js/buttons.html5.min.js') 
     script(src='/datatables-buttons/js/buttons.colVis.min.js') 

mixin Datatables-buttons-bs5 
     script(src='/datatables-buttons-bs5/js/buttons.bootstrap5.min.js') 

mixin Datatables-select-bs5 
     script(src='/datatables-select-bs5/js/select.bootstrap5.min.js') 

mixin JS_JsZip
     script(src='/jszip/jszip.min.js') 

